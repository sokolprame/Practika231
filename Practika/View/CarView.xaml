<Window x:Class="Practika.View.CarView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать автомобиль" Height="300" Width="400">
    <Grid>
        <!-- Ваши поля для редактирования автомобиля -->
        <Label Content="Номер автомобиля:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="106,101,0,0"/>
        <TextBox x:Name="CarNumberTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="106,101,0,0"/>

        <Label Content="Марка:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="106,131,0,0"/>
        <TextBox x:Name="CarBrandTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="106,131,0,0"/>

        <!-- Кнопки для сохранения и отмены -->
        <Button Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="106,161,0,0" Width="100"/>
        <Button Content="Отмена" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="216,161,0,0" Width="100"/>
    </Grid>
</Window>
