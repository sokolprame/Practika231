<Window x:Class="Practika.View.ClientView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить/Редактировать клиента" Height="308" Width="261">
    <Grid>
        <!-- Ваши поля для редактирования клиента -->
        <Label Content="Имя:" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200"/>

        <Label Content="Фамилия:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <TextBox x:Name="SurnameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="0,30,0,0"/>

        <!-- Кнопки для сохранения и отмены -->
        <Button Content="Сохранить" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,60,0,0" Width="100"/>
        <Button Content="Отмена" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,60,0,0" Width="100"/>
    </Grid>
</Window>